{
  "info": {
    "name": "Allumino Backend API",
    "description": "Complete API collection for Allumino platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Root Endpoint",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/../",
              "host": ["{{baseUrl}}"],
              "path": [".."]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login (Redirect to Auth0)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Auth0 Callback",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/callback?code=YOUR_AUTH_CODE",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "callback"],
              "query": [
                {
                  "key": "code",
                  "value": "YOUR_AUTH_CODE"
                }
              ]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/me",
              "host": ["{{baseUrl}}"],
              "path": ["me"]
            }
          }
        },
        {
          "name": "Update My Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"preferences\": {\n    \"theme\": \"dark\",\n    \"notifications\": true\n  },\n  \"customFields\": {\n    \"bio\": \"Software Engineer\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/me",
              "host": ["{{baseUrl}}"],
              "path": ["me"]
            }
          }
        }
      ]
    },
    {
      "name": "Pathways",
      "item": [
        {
          "name": "List My Pathways",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/pathways?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["pathways"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Create Pathway",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Chemical Engineer\",\n  \"description\": \"Pathway description for becoming a chemical engineer\",\n  \"metadata\": {\n    \"tags\": [\"chemistry\", \"engineering\"],\n    \"duration\": \"4 years\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/pathways",
              "host": ["{{baseUrl}}"],
              "path": ["pathways"]
            }
          }
        },
        {
          "name": "Get Pathway by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/pathways/:id",
              "host": ["{{baseUrl}}"],
              "path": ["pathways", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "pathway-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Update Pathway",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Chemical Engineer Path\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/pathways/:id",
              "host": ["{{baseUrl}}"],
              "path": ["pathways", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "pathway-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Pathway",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/pathways/:id",
              "host": ["{{baseUrl}}"],
              "path": ["pathways", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "pathway-uuid-here"
                }
              ]
            }
          }
        },
        {
          "name": "List Public Pathways",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/public/pathways?page=1&limit=20&search=engineer",
              "host": ["{{baseUrl}}"],
              "path": ["public", "pathways"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "search",
                  "value": "engineer"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Assessments",
      "item": [
        {
          "name": "List My Assessments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/assessments?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["assessments"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Create Assessment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Chemistry Skills Assessment\",\n  \"type\": \"skills\",\n  \"pathwayId\": \"pathway-uuid-here\",\n  \"score\": 85.5,\n  \"rawData\": {\n    \"questions\": [\n      {\n        \"id\": \"q1\",\n        \"answer\": \"Option A\",\n        \"correct\": true\n      }\n    ]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/assessments",
              "host": ["{{baseUrl}}"],
              "path": ["assessments"]
            }
          }
        },
        {
          "name": "Get Assessment by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/assessments/:id",
              "host": ["{{baseUrl}}"],
              "path": ["assessments", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "assessment-uuid-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Opportunities",
      "item": [
        {
          "name": "List Opportunities",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/opportunities?tags=internship,remote&location=New York&search=engineer",
              "host": ["{{baseUrl}}"],
              "path": ["opportunities"],
              "query": [
                {
                  "key": "tags",
                  "value": "internship,remote"
                },
                {
                  "key": "location",
                  "value": "New York"
                },
                {
                  "key": "search",
                  "value": "engineer"
                }
              ]
            }
          }
        },
        {
          "name": "Create Opportunity (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Chemical Engineering Internship\",\n  \"description\": \"Summer internship opportunity at XYZ Corp\",\n  \"location\": \"San Francisco, CA\",\n  \"tags\": [\"internship\", \"chemistry\", \"remote\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/opportunities",
              "host": ["{{baseUrl}}"],
              "path": ["opportunities"]
            }
          }
        },
        {
          "name": "List Public Opportunities",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/public/opportunities",
              "host": ["{{baseUrl}}"],
              "path": ["public", "opportunities"]
            }
          }
        }
      ]
    }
  ]
}
